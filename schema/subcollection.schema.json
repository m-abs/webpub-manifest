{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://readium.org/webpub-manifest/schema/subcollection.schema.json",
  "title": "Core Collection Model",
  "$ref": "#/definitions/sub-collection",
  "definitions": {
    "sub-collection": {
      "type": "object",
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "metadata": {
              "type": "object"
            },
            "links": {
              "type": "array",
              "items": {
                "$ref": "link.schema.json"
              }
            },
            "additionalProperties": {
              "$ref": "#/definitions/sub-collection"
            }
          },
          "required": ["metadata", "links"]
        },
        {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "$ref": "link.schema.json"
              },
              {
                "properties": {
                  "metadata": {
                    "type": "object"
                  },
                  "links": {
                    "type": "array",
                    "items": {
                      "$ref": "link.schema.json"
                    }
                  }
                },
                "additionalProperties": {
                  "$ref": "#/definitions/sub-collection"
                },
                "required": ["metadata", "links"]
              }
            ]
          }
        }
      ]
    }
  }
}
